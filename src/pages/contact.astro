---
import Layout from '../layouts/Layout.astro';
import {
    MapPinIcon,
    EnvelopeIcon,
    PhoneIcon,
    ClockIcon
} from '@heroicons/react/24/outline';

const contactInfo = {
  address: 'تهران، خیابان ولیعصر، بالاتر از میدان ونک',
  email: 'info@example.com',
  phone: '۰۲۱-۸۸۸۸۸۸۸۸',
  workingHours: 'شنبه تا چهارشنبه ۹ صبح تا ۵ عصر'
};
---

<Layout title="تماس با ما | شرکت ما" description="راه‌های ارتباطی با شرکت ما">
  <div class="container mx-auto px-4 py-12">
    <!-- Hero Section -->
    <section class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
        تماس با ما
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        ما همیشه آماده پاسخگویی به سوالات و پیشنهادات شما هستیم.
        از طریق راه‌های ارتباطی زیر با ما در تماس باشید.
      </p>
    </section>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          فرم تماس
        </h2>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              نام و نام خانوادگی
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              ایمیل
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              موضوع
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
              پیام
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
          >
            ارسال پیام
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <!-- Map -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8 h-64 mb-8">
          <div class="w-full h-full bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
            نقشه در اینجا قرار می‌گیرد
          </div>
        </div>

        <!-- Contact Details -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            اطلاعات تماس
          </h2>
          <div class="space-y-4">
            <div class="flex items-start space-x-4 space-x-reverse">
              <div class="text-indigo-600 dark:text-indigo-400">
                 <MapPinIcon className="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">آدرس</h3>
                <p class="text-gray-600 dark:text-gray-300">{contactInfo.address}</p>
              </div>
            </div>
            <div class="flex items-start space-x-4 space-x-reverse">
              <div class="text-indigo-600 dark:text-indigo-400">
                 <EnvelopeIcon className="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">ایمیل</h3>
                <p class="text-gray-600 dark:text-gray-300">{contactInfo.email}</p>
              </div>
            </div>
            <div class="flex items-start space-x-4 space-x-reverse">
              <div class="text-indigo-600 dark:text-indigo-400">
               <PhoneIcon className="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">تلفن</h3>
                <p class="text-gray-600 dark:text-gray-300">{contactInfo.phone}</p>
              </div>
            </div>
            <div class="flex items-start space-x-4 space-x-reverse">
              <div class="text-indigo-600 dark:text-indigo-400">
                 <ClockIcon className="w-6 h-6" />
              </div>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">ساعات کاری</h3>
                <p class="text-gray-600 dark:text-gray-300">{contactInfo.workingHours}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
